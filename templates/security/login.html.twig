{% extends 'base.html.twig' %}

{% block title %}{{ 'title.security.login' | trans }} &bull; {{ parent() }}{% endblock %}

{% block content_breadcrumb %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('home') }}" title="{{ 'nav.home.title' | trans }}">{{ 'nav.home.text' | trans }}</a>
            </li>
            <li class="breadcrumb-item active">{{ 'nav.login.text' | trans }}</li>
        </ol>
    </nav>
{% endblock %}

{% block container %}

    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    {{ form_start(form) }}
    <div class="row justify-content-md-center">
        <div class="col-md-6">
            <div class="card border-primary">
                <div class="card-header">
                    <h1>
                        <span class="fa fa-sign-in-alt"></span>
                        {{ 'title.security.login' | trans }}
                    </h1>
                </div>
                <div class="card-body">
                    {{ form_widget(form) }}
                </div>
                <div class="card-footer text-right">
                    <button class="btn btn-primary" type="submit">
                        <span class="fas fa-fw fa-sign-in-alt"></span>&nbsp;{{ 'form.login.field.submit' | trans }}
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}

{% endblock %}
