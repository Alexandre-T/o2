{% extends 'base.html.twig' %}

{% block title %}{{ 'title.customer.buy-credit' | trans }}  &bull; {{ parent() }} {% endblock %}

{% block content_breadcrumb %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('home') }}" title="{{ 'nav.home.title' | trans }}">{{ 'nav.home.text' | trans }}</a>
            </li>
            <li class="breadcrumb-item" aria-current="page">{{ 'title.customer.main' | trans }}</li>
            <li class="breadcrumb-item active" aria-current="page">{{ 'title.customer.buy-credit' | trans }}</li>
        </ol>
    </nav>
{% endblock %}

{% block container %}
    {{ form_start(form) }}
    <div class="row justify-content-md-center mb-5">
        <div class="col-md-10">
            <div class="card border-primary">
                <div class="card-header">
                    <h1>
                        <span class="fas fa-coins"></span>
                        {{ 'title.customer.buy-credit' | trans }}
                    </h1>
                </div>
                <div class="card-body">
                    <ul class="row list-unstyled">
                        <!-- First Step -->
                        <li class="col-4 text-center">
                            <span class="label">{{ 'step.payment.1' | trans }}</span>
                        </li>
                        <!-- Second Step -->
                        <li class="col-4 text-center">
                            <span class="label">{{ 'step.payment.2' | trans }}</span>
                        </li>
                        <!-- Last Step -->
                        <li class="col-4 text-center">
                            <span class="label">{{ 'step.payment.3' | trans }}</span>
                        </li>
                    </ul>
                    <div class="progress mb-5">
                        <div class="progress-bar bg-success progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100" style="width: 33%"></div>
                        <div class="progress-bar            progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100" style="width: 33%"></div>
                    </div>
                    <h3 class="border-bottom">{{ 'order %number%' | trans({'%number%': order.label}) }}</h3>
                    <table class="table text-right">
                        <thead>
                        <tr class="d-flex">
                            <th id="trArticle" scope="row" class="col-4"></th>
                            <th id="trQuantity" scope="row" class="col-2">{{ 'table.order.quantity' | trans }}</th>
                            <th id="trUnit" scope="row" class="col-2">{{ 'table.order.unit-price' | trans }}</th>
                            <th id="trCredit" scope="row" class="col-2">{{ 'table.order.credits' | trans }}</th>
                            <th id="trPrice" scope="row" class="col-2">{{ 'table.order.price' | trans }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for ordered in order.orderedArticles if ordered.quantity %}
                        <tr class="d-flex">
                            <td headers="trArticle" class="col-4">{{ ('form.field.article-' ~ ordered.article.credit) | trans }}</td>
                            <td headers="trQuantity" class="col-2">{{ ordered.quantity }}</td>
                            <td headers="trUnit" class="col-2">{{ ordered.article.price | localizedcurrency('EUR') }}</td>
                            <td headers="trCredit" class="col-2">{{ (ordered.quantity * ordered.article.credit) | localizednumber }}</td>
                            <td headers="trPrice" class="col-2">{{ (ordered.quantity * ordered.article.price) | localizedcurrency('EUR') }}</td>
                        </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr class="d-flex">
                            <th scope="col" class="col-10">Cr√©dits total</th>
                            <td class="col-2 pr-4">{{ order.credits | localizednumber }}</td>
                        </tr>
                        <tr class="d-flex">
                            <th scope="col" class="offset-8 col-2">Prix H.T. total</th>
                            <td class="col-2">{{ order.price | localizedcurrency('EUR') }}</td>
                        </tr>
                        <tr class="d-flex">
                            <th scope="col" class="offset-8 col-2">TVA</th>
                            <td class="col-2">{{ order.vat | localizedcurrency('EUR') }}</td>
                        </tr>
                        <tr class="d-flex">
                            <th scope="col" class="offset-8 col-2">Prix T.T.C. total</th>
                            <td class="col-2">{{ (order.vat + order.price) | localizedcurrency('EUR') }}</td>
                        </tr>
                        </tfoot>
                    </table>
                    <fieldset class="form-group">
                        <div class="row">
                            <legend class="col-form-label col-sm-8 pt-0">{{ 'form.legend.method' | trans }}</legend>
                            <div class="form-check">
                                {{ form_widget(form.method) }}
                            </div>
                        </div>
                    </fieldset>
                    {# I don't know why, but this code hide Data Paypal message #}
                    {{ form_widget(form.data_paypal_express_checkout) }}
                    {{ form_widget(form) }}
                </div>
                <div class="card-footer text-right">
                    <button class="btn btn-primary" type="submit">
                        <span class="fas fa-fw fa-coins mr-1"></span>
                        {{ 'form.buy-credit.field.submit' | trans }}
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
