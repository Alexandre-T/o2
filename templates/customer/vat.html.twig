{% extends 'base.html.twig' %}

{% block title %}{{ 'title.customer.vat' | trans }}  &bull; {{ parent() }}{% endblock %}

{% block content_breadcrumb %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('home') }}" title="{{ 'nav.home.title' | trans }}">{{ 'nav.home.text' | trans }}</a>
            </li>
            <li class="breadcrumb-item" aria-current="page">{{ 'title.customer.main' | trans }}</li>
            <li class="breadcrumb-item active" aria-current="page">{{ 'title.customer.profile' | trans }}</li>
        </ol>
    </nav>
{% endblock %}

{% block container %}
    <div class="row justify-content-md-center mb-5">
        <div class="col-md-10">
            <div class="card border-primary">
                <div class="card-header">
                    <h1>
                        <span class="fas fa-user-cog"></span>
                        {{ 'title.customer.vat' | trans }}
                    </h1>
                </div>
                <div class="card-body">

                </div>
                <div class="card-footer text-right">
                    <button class="btn btn-primary {% vat.isVatUpdating %}disable{% endif %}" type="submit">
                        <span class="fas fa-fw fa-user-cog"></span>
                        {{ 'link.vat-update.text' | trans }}
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}