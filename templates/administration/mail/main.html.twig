{% extends '_entity.html.twig' %}

{% block title %}{{ 'title.administration.mail.main'|trans }} Â· {{ parent() }}{% endblock title %}

{% block content_breadcrumb %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('home') }}" title="{{ 'nav.home.title' | trans }}">{{ 'nav.home.text' | trans }}</a>
            </li>
            <li class="breadcrumb-item" aria-current="page">{{ 'nav.admin.text' | trans }}</li>
            <li class="breadcrumb-item" aria-current="page">{{ 'title.administration.mail.main' | trans }}</li>
        </ol>
    </nav>
{% endblock %}

{% block container %}
    {{ form_start(form) }}
    <div class="row justify-content-md-center">
        <div class="col-md-10">
            <div class="card border-primary">
                <div class="card-header">
                    <h1>
                        <span class="fa fa-envelope-open"></span>
                        {{ 'title.administration.mail.main' | trans }}
                    </h1>
                </div>
                <div class="card-body">
                    <p class="alert alert-info">
                        {{ 'message.mail.process %email%' | trans({'%email%': email}) }}
                    </p>
                    {{ form_widget(form) }}
                </div>
                <div class="card-footer text-right">
                    <button class="btn btn-primary" type="submit">
                        <span class="fa fa-mail-bulk"></span>
                        {{ 'action.mail.main.text' | trans }}
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock container %}

