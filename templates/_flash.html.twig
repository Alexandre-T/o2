{% block flashes %}
    {% if app.session.flashbag.has('error') %}
        {% for flashbag in app.session.flashbag.get('error') %}
            <div class="alert alert-danger alert-dismissible fade show text-center mt-0 rounded-0">
                {{ flashbag | trans  }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}
    {% endif %}
    {% if app.session.flashbag.has('warning') %}
        {% for flashbag in app.session.flashbag.get('warning') %}
            <div class="alert alert-warning alert-dismissible fade show text-center mt-0 rounded-0">
                {{ flashbag | trans  }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}
    {% endif %}
    {% if app.session.flashbag.has('info') %}
        {% for flashbag in app.session.flashbag.get('info') %}
            <div class="alert alert-info alert-dismissible fade show text-center mt-0 rounded-0">
                {{ flashbag | trans  }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}
    {% endif %}
    {% if app.session.flashbag.has('success') %}
        {% for flashbag in app.session.flashbag.get('success') %}
            <div class="alert alert-success alert-dismissible fade show text-center mt-0 rounded-0">
                {{ flashbag | trans  }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}
    {% endif %}
{% endblock flashes %}
